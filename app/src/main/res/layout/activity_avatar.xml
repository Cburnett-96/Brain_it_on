<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_purple"
    android:gravity="center"
    android:padding="10dp"
    tools:context=".AvatarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/change_your_avatar"
            android:textAlignment="center"
            android:textColor="@color/white_smoke"
            android:textSize="25sp"
            android:fontFamily="@font/fredoka_one" />

        <ImageView
            android:id="@+id/changeAvatar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:srcCompat="@raw/profile" />

        <TextView
            android:id="@+id/avatarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/default_profile"
            android:textColor="@color/white_smoke"
            android:textSize="20sp"
            android:fontFamily="@font/proxima_nova"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/avatar1"
                    android:layout_width="125dp"
                    android:layout_height="fill_parent"
                    android:padding="15dp"
                    app:srcCompat="@raw/avatar_1" />

                <ImageView
                    android:id="@+id/avatar2"
                    android:layout_width="125dp"
                    android:layout_height="fill_parent"
                    android:padding="15dp"
                    app:srcCompat="@raw/avatar_2" />

                <ImageView
                    android:id="@+id/avatar3"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    app:srcCompat="@raw/avatar_3" />

                <ImageView
                    android:id="@+id/avatar4"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    app:srcCompat="@raw/avatar_4" />

                <ImageView
                    android:id="@+id/avatar5"
                    android:layout_width="125dp"
                    android:layout_height="fill_parent"
                    android:padding="15dp"
                    app:srcCompat="@raw/avatar_5" />

                <ImageView
                    android:id="@+id/avatar6"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    app:srcCompat="@raw/avatar_6" />

                <ImageView
                    android:id="@+id/avatar7"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    app:srcCompat="@raw/avatar_7" />

                <ImageView
                    android:id="@+id/avatar8"
                    android:layout_width="125dp"
                    android:layout_height="fill_parent"
                    android:padding="15dp"
                    app:srcCompat="@raw/avatar_8" />

            </LinearLayout>

        </HorizontalScrollView>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@raw/save"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/closeButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@raw/close"
            app:backgroundTint="@null"  />

    </LinearLayout>

</RelativeLayout>